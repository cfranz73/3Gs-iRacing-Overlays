# iRacing API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# iRacing Account Credentials
IRACING_EMAIL=your-email@example.com
IRACING_PASSWORD=your-password

# OAuth Client Configuration
# Use the default client ID or register your own application
IRACING_CLIENT_ID=your-client-id

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Overlay Configuration
OVERLAY_REFRESH_RATE=1000
API_CACHE_TIME=5000
ENABLE_TELEMETRY=false

# Development Settings
DEV_PORT=3000
DEV_HOST=localhost
